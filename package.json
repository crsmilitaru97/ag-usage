{
  "name": "ag-usage",
  "version": "1.5.0",
  "displayName": "AG Usage",
  "description": "Track usage of Antigravity AI models",
  "author": "Cristian Militaru",
  "publisher": "crsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/crsmilitaru97/ag-usage"
  },
  "license": "ISC",
  "keywords": [
    "antigravity",
    "ai",
    "usage",
    "quota",
    "monitor",
    "gemini",
    "tracker",
    "google",
    "claude",
    "ag",
    "tokens",
    "dashboard"
  ],
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "AI",
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ag-usage-sidebar",
          "title": "AG Usage",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "ag-usage-sidebar": [
        {
          "type": "webview",
          "id": "ag-usage.sidebarPanel",
          "name": "Dashboard",
          "icon": "assets/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "ag-usage.refresh",
        "title": "Refresh AG Usage",
        "icon": "$(refresh)"
      },
      {
        "command": "ag-usage.openSettings",
        "title": "Open AG Usage Settings",
        "icon": "$(gear)"
      },
      {
        "command": "ag-usage.resetSession",
        "title": "Reset Session Usage",
        "icon": "$(history)"
      },
      {
        "command": "ag-usage.openPanel",
        "title": "Open AG Usage Panel",
        "icon": "$(graph)"
      }
    ],
    "configuration": {
      "title": "AG Usage",
      "properties": {
        "ag-usage.refreshInterval": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "maximum": 3600,
          "description": "Refresh interval in seconds. Set to 0 to disable auto-refresh."
        },
        "ag-usage.statusBarDisplay": {
          "type": "string",
          "default": "all",
          "enum": [
            "average",
            "all",
            "geminiPro",
            "geminiFlash",
            "claudeGpt"
          ],
          "enumDescriptions": [
            "Show the average usage across all groups",
            "Show all three groups side by side",
            "Show only Gemini Pro usage",
            "Show only Gemini Flash usage",
            "Show only Claude/GPT usage"
          ],
          "description": "What to display in the status bar."
        },
        "ag-usage.statusBarCountdown": {
          "type": "boolean",
          "default": true,
          "description": "Show time remaining until next reset in the status bar when quota reaches 0%."
        },
        "ag-usage.showSessionUsageInStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Show the estimated usage since session start alongside the quota in the status bar (e.g. 50% -5%)."
        },
        "ag-usage.notifyOnFullQuota": {
          "type": "boolean",
          "default": false,
          "description": "Show a notification when a model category reaches 100% usage."
        },
        "ag-usage.lowQuotaNotificationThreshold": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage threshold to show a notification when quota drops below this value. Set to 0 to disable notification."
        },
        "ag-usage.resetTimeDisplay": {
          "type": "string",
          "default": "both",
          "enum": [
            "relative",
            "absolute",
            "both"
          ],
          "enumDescriptions": [
            "Show relative time (e.g., 'in 2h 13m')",
            "Show absolute local time (e.g., 'resets at 14:07')",
            "Show both formats (e.g., 'in 2h 13m (14:07)')"
          ],
          "description": "How to display the quota reset time."
        },
        "ag-usage.absoluteTimeFormat": {
          "type": "string",
          "default": "24h",
          "enum": [
            "24h",
            "12h"
          ],
          "enumDescriptions": [
            "Use 24-hour format (e.g., 14:07)",
            "Use 12-hour format (e.g., 2:07 PM)"
          ],
          "description": "Time format for absolute reset time display."
        },
        "ag-usage.trackSessionUsage": {
          "type": "boolean",
          "default": true,
          "description": "Track session usage (quota used since window opened)."
        },
        "ag-usage.perWindowSession": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, session usage tracks only quota consumed while this window is focused. Usage from other windows is excluded."
        },
        "ag-usage.statusBarAlignment": {
          "type": "string",
          "default": "Right",
          "enum": [
            "Left",
            "Right"
          ],
          "description": "Alignment of the status bar item."
        },
        "ag-usage.statusBarPriority": {
          "type": "number",
          "default": 100,
          "description": "Priority of the status bar item. Higher values are further to the left (for Right alignment) or further to the right (for Left alignment)."
        },
        "ag-usage.dateFormatLocale": {
          "type": "string",
          "default": "default",
          "description": "Locale for date formatting (e.g., 'en-US', 'ro-RO', 'default')."
        },
        "ag-usage.maxHistoryItems": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of history items to persist per group."
        },
        "ag-usage.enableHistoryTracking": {
          "type": "boolean",
          "default": true,
          "description": "Enable tracking of quota usage history over time."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "ag-usage.openSettings",
          "when": "view == ag-usage.sidebarPanel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "package": "npx vsce package",
    "publish:ovsx": "npx ovsx publish"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "@types/vscode": "^1.107.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}